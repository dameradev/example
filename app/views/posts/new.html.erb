<%= form_with(model: @post, local: true) do |form| %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>
  <ul>
  <%= form.fields_for :skills  do |skill_form|%>
    <li>
        <%= skill_form.label :name %>
        <%= skill_form.text_field :name %>
    </li>
  <% end %>
</ul>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
